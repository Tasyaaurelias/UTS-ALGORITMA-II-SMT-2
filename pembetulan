package uts.algoritma;
import java.util.Scanner;
public class perulangan {

    public static void main(String[] args) {
         Scanner input = new Scanner(System.in);
    {
        //variabel yg akan digunakan
         int a, b, c ,hasil = 0;
         //untuk menunjukan program yg dibutuhkan
         System.out.println("Program Perulangan ");
         System.out.println("1. Penjumlahan");
         System.out.println("2. pengurangan");
         System.out.println("3. perkalian");
         System.out.println("4. Pembagian");
         System.out.println("----------------------------");
         //untuk nilai yg dimasukkan 
         System.out.print("Bilangan 1 : ");
         a=input.nextInt();
         System.out.print("Bilangan 2 : ");
         b=input.nextInt();
         System.out.print("Pilihan Perulangan: ");
         c=input.nextInt();
         
         //utuk mengeluarkan hasil yg diingikan
         switch (c){
             case 1 : hasil=a+b;break;
             case 2 : hasil=a-b;break;
             case 3 : hasil=a*b;break;
             case 4 : hasil=a/b;break;
             default : System.out.println("Pilihan Salah");
         }
         
         //untuk menampilkan output ke user
          System.out.println("Hasil :"+hasil);
    }
}
       
    }

    
    

